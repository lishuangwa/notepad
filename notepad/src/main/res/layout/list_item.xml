        android:id="@+id/item_img"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp"
        android:layout_weight="6"
        android:src="@color/content" />
</LinearLayout>